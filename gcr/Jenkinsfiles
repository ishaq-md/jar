pipeline {
    agent any
    tools
    {
    }

    environment {
    SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }
     
    stages {
        stage ('checkout'){
            steps {
                git branch: 'master', url: 'https://github.com/ishaqmdgcp/jar.git'
            }
        }
      
      	stage('Set creds') {
            steps {
              
                sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./gcr/jenkins.json'
		            sh 'pwd'
                       
               
            }
        }
	
	stage('Pull image') {
	 steps {
        /* Below command specifies exactly like the command line */
    
        sh 'docker pull ishaqmd/petclinic'
	sh 'docker tag ishaqmd/petclinic gcr.io/mi-env-dev/petclinic:v1' 
    }
    }
        
        stage('Push Image to GCR') {
		 steps {  
			  dir('gcr')
			 {
			 sh 'pwd'
        sh 'gcloud auth activate-service-account jenkins@mi-env-dev.iam.gserviceaccount.com --key-file=jenkins.json'
	sh 'gcloud auth configure-docker'
        sh 'docker push gcr.io/mi-env-dev/petclinic:v1'
			 }
		 }
	 }
	 
	 
	stage('Create GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters create sample-cluster --zone us-central1-a --num-nodes=1 --project mi-env-dev'
    }
    }
    
    stage('Get creds from GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters get-credentials sample-cluster --zone us-central1-a --project mi-env-dev'
    }
    }
    
    stage('App Deploy') {
	 steps {
	 dir('gcr')
			 {
        /* Below command specifies exactly like the command line */
    
        sh 'kubectl apply -f deployment.yaml'
	sh 'sleep 60s'
	
    }
    }
    }
    
       }
}
